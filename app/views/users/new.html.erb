<% provide(:title, "Sign up") %>
<main id="main">

    <!-- ======= Breadcrumb Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Sign Up</h2>
          <ol>
            <li><a href="index.html">Home</a></li>
            <li>Sign Up</li>
          </ol>
        </div>

      </div>
    </section>
    <!-- End Breadcrumb Section -->

    <!-- ======= Form Section ======= -->
    <section class="contact aos-init aos-animate" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
      <div class="container">

        <div class="row">

          <div class="col-lg-3">

          </div>

          <div class="col-lg-6">
            <%= form_for @user, url: signup_path do |f| %>
              <div class="form-row">
                <div class="col-md-6 form-group">
                  <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>                  <div class="validate"></div>
                </div>
                <div class="col-md-6 form-group">
                  <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.text_field :username, class: "form-control", placeholder: "User name" %>
              </div>

              <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
              </div>

              <div class="form-row">
                <div class="col-md-6 form-group">
                  <%= f.password_field :password, class: "form-control", placeholder: "Password" %>          
                </div>
                <div class="col-md-6 form-group">
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
                </div>
              </div>
                        
              <div class="text-center "><%= f.button "Sign up", class: "sub-but" %></div>
            <% end %>

            
          </div>

        </div>

      </div>
    </section><!-- End Form Section -->

  </main><!-- End #main -->

