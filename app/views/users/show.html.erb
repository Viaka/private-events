<% provide(:title, "Profile") %>

<main id="main">

  <!-- ======= Blog Section ======= -->
  <section class="breadcrumbs">
    <div class="container">

      <div class="d-flex justify-content-between align-items-center">
        <h2>Blog</h2>

        <ol>
          <li><%= link_to "Home", root_path %></li>
          <li>Blog</li>
        </ol>
      </div>

    </div>
  </section><!-- End Blog Section -->

  <!-- ======= Blog Section ======= -->
  <section class="blog" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container">

      <div class="row">

      <div class="col-lg-4">
        <div class="sidebar">

          <h3 class="sidebar-title"><%= @user.username%></h3>
          
          <div class="sidebar-item categories">
          <h4 class="sidebar-title">Events</h4>
          <ul>
          <li><%= link_to "Upcoming events", user_path(@user, query: "upcoming") %></li>
          <li><%= link_to "Past events", user_path(@user, query: "past") %></li>
          <li><%= link_to "Create New Event", new_event_path%></li>
          <!-- <li><a href="#">General <span>(25)</span></a></li> -->
          </ul>

          </div><!-- End sidebar categories-->

        </div><!-- End sidebar -->

        </div><!-- End blog sidebar -->

        <div class="col-lg-8 entries" id="entries">

          <% if @events.any? %>
            <%= render @events %>
          <% end %>

          <div class="blog-pagination">
            <ul class="justify-content-center">
              <%= will_paginate @events %>
            </ul>
          </div>

        </div><!-- End blog entries list -->

      </div><!-- End .row -->

    </div><!-- End .container -->

  </section><!-- End Blog Section -->

  </main><!-- End #main -->